<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/con_status_title"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/status_title"
            android:layout_column="1"
            android:layout_row="1"
            />

        <TextView
            android:id="@+id/con_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_default"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="1"
            />

        <Button
            android:id="@+id/bt_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_bt_discover"
            android:layout_column="1"
            android:layout_row="2"
            />

        <Button
            android:id="@+id/bt_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_bt_on"
            android:layout_column="2"
            android:layout_row="2"
            />

        <Button
            android:id="@+id/bt_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_bt_disconnect"
            android:layout_column="3"
            android:layout_row="2"
            />


        <EditText
            android:id="@+id/exit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_column="1"
            android:layout_row="3"
            android:inputType="text"
            android:hint="string to sent"
            />

        <Button
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:layout_column="3"
            android:layout_row="3"
            />

    </GridLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >


        <Button
            style="@style/DirectionalButton"
            android:id="@+id/button_fwd"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Forward"
            />

        <Button
            style="@style/DirectionalButton"
            android:id="@+id/button_reverse"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Reverse" />

        <Button
            style="@style/DirectionalButton"
            android:id="@+id/button_left"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Turn Left" />

        <Button
            style="@style/DirectionalButton"
            android:id="@+id/button_right"
            android:layout_column="3"
            android:layout_row="2"
            android:text="Turn Right" />

    </GridLayout>


</LinearLayout>